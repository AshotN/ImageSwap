.center
	text-align center
	
.wrong
	color: #F00 !important;
	
.inline-block
	display: inline-block
	
.full
	width: 100%
	
.button
	border-radius: 5px;
	background-color: rgba(0, 0, 0, 0.16);
	box-shadow: 0px 0px 1px #000 inset;
	border: 0px none;
	width: 300px;
	color: #EFEFEF;
	font-family: Roboto;
	font-weight: 300;
	letter-spacing: 1px;
	margin: 10px 0px;
	font-size: 16px;
	padding: 10px;
	transition: background-color 0.3s;
	&:hover
		background-color: rgba(0, 0, 0, 0.3);
		transition: background-color 0.3s;
	&:disabled
		background-color: rgba(255, 0, 0, 0.16);
		box-shadow: 0px 0px 1px #F00 inset;
		color: #7A7878;

.message
	background-color: rgba(62, 62, 62, 0.6);
	box-shadow: 0px 0px 1px #000 inset;
	border: 0px none;
	width: 300px;
	color: #EFEFEF;
	font-family: Roboto;
	font-weight: 300;
	letter-spacing: 1px;
	font-size: 16px;
	padding: 10px;
	margin: 0px auto;
	text-align: center;
	
.cover
	height: 100%;
	background: rgba(221, 221, 221, 0.5);
	width: 100%;
	position: fixed
	display: none
	
