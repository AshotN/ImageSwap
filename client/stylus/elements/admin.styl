.canvas
	margin: 30px;
	box-shadow: 0 0 10px 0px #3E3E3E;
	
.tools
	background-color: rgba(255, 255, 255, 0.4);
	margin: 0px auto;
	position: relative;
	bottom: 82px;
	height: 48px;
	overflow: hidden
	.control
		cursor: pointer
		height: 40px;
		padding: 5px;
		width: 38px;
	.rleft
		transform: scaleX(-1)
		margin-right: 50px;
	.rright
		margin-left: 50px;
	.delete
		float: left;
		position: relative;
		left: 20px;
.image
	display: inline-block;
	
.uploaddate
	color: #000;
	float: right;
	position: relative;
	font-size: 38px;
	right: 20px;
	bottom: 56px;
	font-family: Roboto;
	font-weight: 300;
	

#message
	background: none repeat scroll 0% 0% rgba(255, 255, 255, 0.3);
	width: 100%;
	height: 45px;
	position: fixed;
	bottom: 0px;
	box-shadow: 0px 0px 10px #272727;
	opacity: 0;
	display none
	text-align: center;
	#messagetext
		font-family: Ubuntu;
		font-size: 32px;
		font-weight: 100;
.error
	background: none repeat scroll 0% 0% rgba(255, 0, 0, 0.28) !important;