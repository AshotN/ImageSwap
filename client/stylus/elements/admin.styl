.canvas
	margin: 30px;
	box-shadow: 0 0 10px 0px #3E3E3E;
	
.tools
	background-color: rgba(255, 255, 255, 0.4);
	margin: 0px auto;
	position: relative;
	bottom: 82px;
	height: 48px;
	overflow: hidden
	.control
		cursor: pointer
		height: 40px;
		padding: 5px;
		width: 38px;
	.rleft
		transform: scaleX(-1)
		margin-right: 50px;
	.rright
		margin-left: 50px;
	.delete
		float: left;
		position: relative;
		left: 20px;
.image
	display: inline-block;
	
.uploaddate
	color: #000;
	float: right;
	position: relative;
	font-size: 38px;
	right: 20px;
	bottom: 56px;
	font-family: Roboto;
	font-weight: 300;
	

#message
	background: none repeat scroll 0% 0% rgba(255, 255, 255, 0.3);
	width: 100%;
	padding 10px
	position: fixed;
	bottom: 0px;
	box-shadow: 0px 0px 10px #272727;
	opacity: 0;
	display none
	text-align: center;
	z-index 100
	#messagetext
		font-family: Ubuntu;
		font-size: 32px;
		font-weight: 100;
.error
	background: none repeat scroll 0% 0% rgba(255, 0, 0, 0.28) !important;
	
#calendar
	max-width: 94%;
	margin 0 auto
	
.fc td, .fc th 
	background-color white
	
.calendar-image
	width 45%
	transition: transform 0.2s
	position: relative;
	left: 25%;
	&:hover
		transform:scale(2)
		transition: transform 0.2s

	
.fc-toolbar .fc-left 
	background-color: #EBEBEB;
	padding: 10px;
	border-radius: 5px;

#linkButton
	display: inline-block;
	text-decoration: none;